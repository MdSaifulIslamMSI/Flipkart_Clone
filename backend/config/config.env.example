# This is a example .env file for use in local development.
# Duplicate this file as .env in the root of the project and update the environment variables to match your desired config

# The HTTP port to run the application on
PORT=4000

# MongoDB connection string
# MongoDB connection string
MONGO_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@cluster.mongodb.net/YOUR_DB_NAME

# JWT secret and expiry
JWT_SECRET=YOUR_JWT_SECRET_HERE
JWT_EXPIRE=7d

# Cookie expiry
COOKIE_EXPIRE=5

# Stripe API Key & Secret Key (Optional)
STRIPE_API_KEY=YOUR_STRIPE_KEY
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET

# Any SMTP Credentials (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_SERVICE=gmail
SMTP_MAIL=your_email@example.com
SMTP_PASSWORD=your_email_password

# Sendgrid Credentials
SENDGRID_API_KEY=SG.your_api_key
SENDGRID_MAIL=your_email@example.com
SENDGRID_RESET_TEMPLATEID=d-template_id
SENDGRID_ORDER_TEMPLATEID=d-template_id

# Cloudinary Credentials
CLOUDINARY_NAME=your_cloud_test_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Paytm Credentials
PAYTM_MID=your_paytm_mid
PAYTM_MERCHANT_KEY=your_paytm_key
PAYTM_WEBSITE=WEBSTAGING
PAYTM_CHANNEL_ID=WEB
PAYTM_INDUSTRY_TYPE=Retail
PAYTM_CUST_ID=your_cust_id

# The environment to run the application in
NODE_ENV=development